{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                        <li>
                            <div>{{position}}</div>

                            <br>

                            <div>{{duration.from}} - 
                                {{#if duration.to}} 
                                    {{duration.to}} 
                                {{else}} 
                                    (досі працюю) 
                                {{/if}}
                            </div>

                            <br>

                            {{#if company.url}}
                                <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
                            {{else}}
                                <div><b>{{company.name}}</b></div>
                            {{/if}}
                       
                        <br>
                        <br>

                            <div> 
                                <strong>Projects </strong>
                            </div>
                            <br>
                            <ul>
                                {{#each projectAmount}}
                                <li>
                                    
                                   {{!-- <div>{{name}}</div>  --}}
                                   <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                   <br>

                                    <div>
                                        <p>{{about}}</p>
                                    </div>

                                    <br>

                                <section>   
                                    <div>
                                        <em>Project stacks</em>
                                    </div>

                                    <br>
                            
                                {{#each stacks}}
                                <li>
                                    {{name}}
                                    {{#if stackAmount}} ({{stackAmount}}) {{/if}}
                                </li>
                                {{/each}}

                                </section> 
                                <br>

                                <div>
                                   <em>Project awards</em>
                                </div>

                                <br>

                                {{#each awords}}
                                <li>
                                   {{name}}
                                </li>
                                {{/each}}
                                
                                <br>

                                </li>
                                {{/each}}
                            </ul>
                             </li>
                             <br>

                    {{/each}}
                </ul>
            </div>
        </section>
 
    </main>
    {{/with}}

</div>

